{
	"name": "@lightbase/utils",
	"version": "1.3.0",
	"type": "module",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/lightbasenl/platforms/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lightbasenl/platforms.git",
		"directory": "packages/utils"
	},
	"files": ["dist/src"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		},
		"./node": {
			"type": "./dist/src/node/index.d.ts",
			"node": "./dist/src/node/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p ./tsconfig.json",
		"lint": "eslint . --concurrency=auto --fix --cache --cache-strategy content --cache-location .cache/eslint/ --color",
		"lint:ci": "eslint . --concurrency=auto",
		"test": "vitest",
		"clean": "rm -rf ./.cache ./dist"
	},
	"dependencies": {}
}
